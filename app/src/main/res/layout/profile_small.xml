<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/header_cover_image"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">



    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/profileSmall_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="5dp"
        android:padding="20dp"
        android:scaleType="centerCrop"
        app:roundWithOverlayColor="#fff"
        app:roundingBorderWidth="2dp"
        app:roundingBorderColor="#fff"
        app:roundAsCircle="true"
        app:failureImage="@drawable/ic_person"
        app:backgroundImage="@color/secondaryColor"/>

    <TextView
        android:id="@+id/profileSmall_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/profileSmall_photo"
        android:text="Display Name"
        android:textColor="#000"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/profileSmall_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileSmall_displayName"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@+id/profileSmall_photo"
        android:text="UserName"
        android:textColor="#888"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/profileSmall_actionButton"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed"
        android:text="Subscribe"
        android:textColor="@color/secondaryDarkColor"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/profileSmall_photo"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="#BBB"/>

</RelativeLayout>