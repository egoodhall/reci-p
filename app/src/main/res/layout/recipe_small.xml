<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/header_cover_image"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/recipeSmall_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/header_cover_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#bbb"
        android:elevation="5dp"
        android:padding="20dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_person"/>

    <TextView
        android:id="@+id/recipeSmall_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/recipeSmall_photo"
        android:layout_toRightOf="@+id/recipeSmall_photo"
        android:text="Recipe Title"
        android:textColor="#000"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/recipeSmall_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeSmall_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@+id/recipeSmall_photo"
        android:layout_toRightOf="@+id/recipeSmall_photo"
        android:text="Recipe Detail"
        android:textColor="#888"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/recipeSmall_actionButton"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed"
        android:text="Save"
        android:textColor="@color/secondaryDarkColor"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/recipeSmall_photo"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="#BBB"/>

</RelativeLayout>