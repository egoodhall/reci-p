<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="SearchBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/secondaryColor</item>
        <item name="colorControlHighlight">@color/secondaryColor</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#77ffffff</item>
        <item name="colorControlNormal">#89e9e9e9</item>
    </style>

</resources>
